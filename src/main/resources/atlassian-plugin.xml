<atlassian-plugin key="${project.groupId}.${project.artifactId}"
	name="${project.name}" plugins-version="2">
	<plugin-info>
		<description>${project.description}</description>
		<version>${project.version}</version>
		<vendor name="${project.organization.name}" url="${project.organization.url}" />
		<param name="atlassian-data-center-compatible">true</param>
		<param name="plugin-icon">images/pluginIcon.png</param>
		<param name="plugin-logo">images/pluginLogo.png</param>
		<!-- <bundle-instructions>
      		<Import-Package>org.sonar.wsclient,*;resolution:=optional</Import-Package>
    	</bundle-instructions> -->
	</plugin-info>

	<!-- add our macros -->
	<xhtml-macro name="sonar-test-status" class="com.baloise.confluence.dashboardplus.SonarTestStatusMacro"
		key="sonar-test-status"
		icon="/download/resources/${project.groupId}.${project.artifactId}/images/sonarStatusIcon.png">
		<category name="visuals" />
		<parameters>
			<parameter name="host" type="string" required="true" default="http://itq.balgroupit.com/sonar"/>
			<parameter name="resourceId" type="string" required="true" default="ch.baloise.testing.st:gwpc-st-TEST">
				<option key="showNameInPlaceholder" value="false" />
            	<option key="showValueInPlaceholder" value="true" />
            </parameter>
			<parameter name="label" type="string"/>
			<parameter name="simpleThresholdModel" type="boolean" default="false"/>
			<parameter name="threshold1" type="string" required="true" default="1.0"/>
			<parameter name="threshold2" type="string" required="true" default="0.75"/>
			<parameter name="period" type="string" default="0"/>
			<parameter name="showDetails" type="boolean" default="true"/>
			<parameter name="hyperlinkURL" type="string"/>
			<parameter name="hyperlinkTarget" type="string" default="_blank"/>
			<parameter name="inclSkippedTests" type="boolean" default="false"/>
			<parameter name="applyOutlineStyle" type="boolean" default="false"/>
			<parameter name="fontSize" type="string"/>
		</parameters>
	</xhtml-macro>
	<xhtml-macro name="jenkins-job-status" class="com.baloise.confluence.dashboardplus.JenkinsJobStatusMacro"
		key="jenkins-job-status"
		icon="/download/resources/${project.groupId}.${project.artifactId}/images/jenkinsStatusIcon.png">
		<category name="visuals" />
		<parameters>
			<parameter name="host" type="string" required="true" default="http://jenkins-ch.balgroupit.com:8080"/>
			<parameter name="jobName" type="string" required="true" default="PolicyCenter_CI">
				<option key="showNameInPlaceholder" value="false" />
            	<option key="showValueInPlaceholder" value="true" />
            </parameter>
			<parameter name="label" type="string"/>
			<parameter name="period" type="string" default="0"/>
			<parameter name="showDetails" type="boolean" default="true"/>
			<parameter name="doesReflectTest" type="boolean" default="false"/>
			<parameter name="simpleThresholdModel" type="boolean" default="false"/>
			<parameter name="threshold1" type="string" required="true" default="1.0"/>
			<parameter name="threshold2" type="string" required="true" default="0.75"/>
			<parameter name="hyperlinkURL" type="string"/>
			<parameter name="hyperlinkTarget" type="string" default="_blank"/>
			<parameter name="inclSkippedTests" type="boolean" default="false"/>
			<parameter name="applyOutlineStyle" type="boolean" default="false"/>
			<parameter name="showFailedTestDetailsAsTooltip" type="boolean" default="true"/>
			<parameter name="fontSize" type="string"/>
		</parameters>
	</xhtml-macro>
	<xhtml-macro name="static-status-light" class="com.baloise.confluence.dashboardplus.StaticStatusLightMacro"
		key="static-status-light"
		icon="/download/resources/${project.groupId}.${project.artifactId}/images/staticStatusLightIcon.png">
		<category name="visuals" />
		<parameters>
			<parameter name="color" type="enum" required="true" default="Blue">
				<value name="Blue"/>
				<value name="Green"/>
				<value name="Yellow"/>
				<value name="Red"/>
				<value name="Grey"/>
				<value name="Brown"/>
			</parameter>
			<parameter name="label" type="string" default="?"/>
			<parameter name="hyperlinkURL" type="string"/>
			<parameter name="hyperlinkTarget" type="string" default="_blank"/>
			<parameter name="applyOutlineStyle" type="boolean" default="false"/>
			<parameter name="fontSize" type="string"/>
		</parameters>
	</xhtml-macro>
	<xhtml-macro name="neo4j-speedometer" class="com.baloise.confluence.dashboardplus.Neo4jSpeedometerMacro"
		key="neo4j-speedometer"
		icon="/download/resources/${project.groupId}.${project.artifactId}/images/neo4jSpeedometerIcon.png">
		<category name="visuals" />
		<parameters>
			<parameter name="host" type="string" required="true"/>
			<parameter name="cypher" type="string" required="true"/>
			<parameter name="widthPixel" type="string"/>
			<parameter name="heightPixel" type="string" required="true" default="200"/>
			<parameter name="tooltipText" type="string"/>
			<parameter name="refreshIntervalInMillis" type="string" required="true" default="0"/>
			<parameter name="animDurationInMillis" type="string" required="true" default="1000"/>
			<parameter name="animEasingStyle" type="enum" required="true" default="linear">
				<value name="linear"/>
				<value name="in"/>
				<value name="out"/>
				<value name="inAndOut"/>
			</parameter>
			<parameter name="hyperlinkURL" type="string"/>
			<parameter name="hyperlinkTarget" type="string" default="_blank"/>
		</parameters>
	</xhtml-macro>

	<!-- add our i18n resource -->
	<resource type="i18n" name="i18n" location="dashboard-plus" />
	<resource type="download" name="images/" location="/images" />

	<!-- add our web resources -->
    <web-resource key="dplus-light-resources" name="dashboard-plus light Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<resource type="download" name="dplus-light.css" location="/css/dplus-light.css" />
		<resource type="download" name="images/" location="/images" />
	</web-resource>
	<web-resource key="dplus-speedometer-resources" name="dashboard-plus speedometer Web Resources">
		<dependency>com.atlassian.auiplugin:ajs</dependency>
		<resource type="download" name="google-jsapi.js" location="/js/google-jsapi.js" />
		<resource type="download" name="dplus-neo4j-speedometer.js" location="/js/dplus-neo4j-speedometer.js" />
		<resource type="download" name="images/" location="/images" />
	</web-resource>

	<!-- publish our component -->
	<!-- <component key="myPluginComponent" class="com.baloise.confluence.dashboardplus.MyPluginComponentImpl" 
		public="true"> <interface>com.baloise.confluence.dashboardplus.MyPluginComponent</interface> 
		</component> -->

	<!-- import from the product container -->
	<component-import key="applicationProperties"
		interface="com.atlassian.sal.api.ApplicationProperties" />
	<component-import key="i18nResolver" interface="com.atlassian.sal.api.message.I18nResolver"/>

</atlassian-plugin>